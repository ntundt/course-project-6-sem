{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"rootDir": "./",
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "build",
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}